<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.quanglong.activities_intent_exercise2_1.StudentActivity">

    <TextView
        android:id="@+id/tvName"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etHometown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your hometown"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter date of birth"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter sex"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etNameClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name of class"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your course"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnStudentInforActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StudentInforActivity"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>



</LinearLayout>
